<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cxk.dao.VideoDao">
    <insert id="insertVideos" parameterType="com.cxk.pojo.Video">
        INSERT INTO gm_video values(0,#{video_title},#{video_image},#{video_content},#{video_src},#{video_date},#{video_type})
    </insert>
    <select id="findById" parameterType="com.cxk.pojo.Video">
        SELECT * FROM gm_video WHERE video_id=#{video_id}
    </select>
    <update id="updateVideo" parameterType="com.cxk.pojo.Video">
        UPDATE gm_video SET video_title=#{video_title},video_image=#{video_title},video_content=#{video_title},video_src=#{video_title},video_date=#{video_title},video_type=#{video_type} WHERE video_id=#{video_id}
    </update>
    <delete id="deleteVideo" parameterType="int">
        DELETE FROM gm_video WHERE video_id=#{video_id}
    </delete>
</mapper>